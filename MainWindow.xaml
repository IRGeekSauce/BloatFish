                <StackPanel Grid.Row="3" Grid.Column="1">
                    <Button Name="solitairecollectionBtn" Margin="10" Style="{StaticResource ImageButtonStyle}" Click="ImageBtn_Click">
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Opacity="0.8"/>
